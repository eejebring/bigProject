<section class="start bg-gray">
    <h2 class="text-center">Browse & create threads</h2>
    <div class="text-center">
        {{#if role}}
            <a href="/createTopic" class="text-light bg-primary text-large padding-1">
                Create new topic
            </a>
        {{else}}
            <a href="/login" class="text-light bg-primary text-large padding-1">
                Login
            </a>
        {{/if}}
    </div>
    <div class="text-center">
        <a href="#topics" class="text-light bg-primary text-large padding-1">
            Browse <i class="icon icon-arrow-down icon-2x"></i>
        </a>
    </div>
</section>
<section id="topics">
    <h3>Topics</h3>
    {{#if topics.length}}
        <ul>
            {{#each topics}}
                <li class="topic"><a href="/topic:{{topicID}}">{{title}}</a></li>
            {{/each}}
        </ul>
    {{else}}
        <p>No topics here :(</p>
    {{/if}}
</section>
