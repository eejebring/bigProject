<header class="start">
    <h2 class="text-center">Browse & create topics</h2>
    <div class="text-center">
        {{#if role}}
            <a href="/createTopic" class="text-light bg-primary text-large padding-1">
                Create new topic
            </a>
        {{else}}
            <a href="/login" class="text-light bg-primary text-large padding-1">
                Login
            </a>
        {{/if}}
    </div>
    <div class="text-center">
        <a href="#topics" class="text-light bg-primary text-large padding-1">
            Browse <i class="icon icon-arrow-down icon-2x"></i>
        </a>
    </div>
</header>
<section id="topics">
    <h3>Topics</h3>
    {{#if topics.length}}
        <ul>
            {{#each topics}}
                <li class="tile tile-centered">
                    <div class="tile-icon">
                        <figure class="avatar" data-initial="{{initials}}">
                            <img src="../userImages/{{username}}.png" alt="">
                        </figure>
                    </div>
                    <div class="tile-content">
                        <div class="tile-title"><a href="/topic/{{topicID}}">{{title}}</a></div>
                        <small class="tile-subtitle text-gray">{{age}}</small>
                    </div>
                </li>
            {{/each}}
        </ul>
    {{else}}
        <p>No topics here :(</p>
    {{/if}}
</section>
<ul class="pagination">
    {{#each pagination}}
        <li class="page-item{{#if active}} active{{/if}}{{#if disabled}} disabled{{/if}}">
            <a href="/index/{{pageNr}}">{{name}}</a>
        </li>
    {{/each}}
</ul>